<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.artist.artista.MainActivity$PlaceholderFragment">

    <TextView
        android:text="EMT 14: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView1"
        android:layout_marginTop="0dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="--"
            android:id="@+id/textviev_time1"
            android:layout_alignTop="@+id/textView1" android:layout_toRightOf="@+id/textView1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_refresh"
            android:id="@+id/button_refresh1"
            android:layout_marginLeft="32dp" android:layout_alignTop="@+id/textviev_time1"
            android:layout_toRightOf="@+id/textviev_time1"/>


    <TextView
            android:text="EMY 27: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView2"
            android:layout_marginTop="50dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="--"
            android:id="@+id/textviev_time2"
            android:layout_alignTop="@+id/textView2" android:layout_toRightOf="@+id/textView2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_refresh"
            android:id="@+id/button_refresh2"
            android:layout_marginLeft="32dp" android:layout_alignTop="@+id/textviev_time2"
            android:layout_toRightOf="@+id/textviev_time2"/>


</RelativeLayout>
